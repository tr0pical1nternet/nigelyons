@font-face
  font-family Microgramma D Extended
  font-weight bold
  src url(fonts/MicrogrammaD-BoldExte.woff2)
  src url(fonts/MicrogrammaD-BoldExte.woff)

// Variables
margin__default = 1.5rem
font-family__heading = Microgramma D Extended, sans-serif
font-family__text = sans-serif
color__1 = #000000
color__2 = darken(#7f8082, 17%)
color__3 = #FFFFFF
color__4 = lighten(color__2, 55%)
color__5 = #25cfe3
color__6 = darken(color__3, 15%)
color__7 = darken(color__3, 25%)
color__8 = darken(color__3, 33%)
color__9 = #191919
background-color__1 = color__2
background-color__2 = color__1
background-color__3 = color__3

// Mixins
anchor(link-color, link-color--hover, link-color--visited)
  a
    color: link-color
    &:hover
      color: link-color--hover
    &:visited
      color: link-color--visited

body
  font-family: font-family__text
  background-color: background-color__1

h1, h2, h3, h4, h5
  font-family: font-family__text
  text-transform: uppercase
  font-weight: bold
  margin-bottom: .5em

h1, h2
  font-family: font-family__heading

a
  text-decoration: none
  color: color__3

.list-style--none
  list-style: none
  padding-left: 0

svg
  overflow: visible

// Video
.video 
  position: relative
  padding-bottom: 56.25%
  padding-top: 25px
  height: 0

.video iframe
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%

.block
  overflow-x: hidden
  margin-bottom: 3rem
  & img
    width: 100%
    height: auto
    display: block

.block__title
  display: inline-block
  padding-left: margin__default
  padding-right: 1em
  border-bottom: .2em solid color__3
  box-shadow: 1.25em 0 color__3, 2.25em 0 color__6, 3.05em 0 color__7, 7em 0 color__8
  transform: skewX(-30deg)
  margin-bottom: 0

.block__title__text
  display: inline-block
  transform: skewX(30deg)

.block__content
  padding: margin__default
  background-color: color__9
  color: color__4
  h3
    color: darken(color__3, 15%)
  p
   line-height: 1.35