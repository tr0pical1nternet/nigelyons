.masthead
  display: flex
  flex-direction: column
  margin: margin__default
  height: 90vh

.logo
  width: 100%
  order: 20

.video-production
  font-size: 6.5vw
  margin: 0
  order: 10

.service-list
  margin-top: .25em
  font-size: 1.17rem
  font-weight: bold
  text-transform: uppercase
  order: 30

.header-contact
  margin-top: 5em
  order: 40
  & a
    display: block
    font-size: 1.17rem
    font-weight: bold
    margin: .35em 0

.header-subtext
  margin-top: 3rem
  display: flex
  justify-content: flex-end
  & svg
    width: 11rem

.header-subtext__4k
  fill: none
  stroke: color__1
  stroke-width: .5

.header-subtext__text
  // text-transform: uppercase

.header-subtext__stroke
  stroke: color__1
  stroke-width: .5

