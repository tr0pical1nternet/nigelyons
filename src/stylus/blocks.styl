.block
  overflow-x: hidden
  margin-bottom: 2.5rem
  & img
    width: 100%
    height: auto
    display: block

.block__title
  display: grid
  grid-template-columns: auto 1fr
  
  padding-right: 0
  transform: skewX(-30deg)
  margin-bottom: 0

.block__title__text
  padding: 0 1.5em 0 margin__1
  transform: skewX(30deg)
  border-bottom: .2em solid color__8
  box-shadow: 0 .1em color__0

.block__title__decoration
  width: 100vw
  display: grid
  grid-template-columns: 15vw 10vw 5vw auto
  box-shadow: 0 .1em color__0
  span:nth-child(1)
    background-color: color__8
    border-bottom: .2em solid color__8
  span:nth-child(2)
    background-color: color__7
    border-bottom: .2em solid color__7
  span:nth-child(3)
    background-color: color__6
    border-bottom: .2em solid color__6
  span:nth-child(4)
    background-color: color__5
    border-bottom: .2em solid color__5


.block__content
  background-color: color__1
  color: color__5
  padding: 1em 0

.block__text
  margin: margin__1
  h3
    color: color__7
    margin-top: .75em
  p
    color: color__6
    line-height: 1.35

// Video
.block__video 
  position: relative
  padding-bottom: 56.25%
  padding-top: 25px
  height: 0
  iframe
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%

// Reel
.block__video--reel  
  margin: 0 margin__0
  // max-width: 67.5rem;

// About
.block__text--about
  display: grid
  grid-template-columns: 100%
  grid-template-rows: auto auto
  grid-template-areas: "figure" "text"
  grid-gap: margin__2
  justify-items: center
  h3 
    margin-top: 0

.block__figure--about
  max-width: 300px
  margin: 0 auto
  grid-area: figure
  img
    border-radius: 1rem
    overflow: hidden  

.block--about__text-wrap
  max-width: 30em
  grid-area: text
  // margin: 2rem auto 1rem

// Portfolio

.block__content--portfolio
  display: grid
  grid-gap: margin__2
  grid-template-columns: 1fr
  padding: margin__1 0

.portfolio-item
  background-color: #000000
  display: grid
  grid-template-rows: auto 1fr auto
  padding-bottom: 1%
  
.portfolio-item__title
  color: color__7
  margin: margin__3

.portfolio-item__video
  @extend .block__video

.portfolio-item__meta
  padding: margin__3
  display: grid
  grid-template-columns: 1fr 1fr
  grid-template-rows: auto auto
  grid-gap: margin__3
  grid-template-areas: "desc desc" "date genre"
  font-size: font-size__small
  color: color__4

.portfolio-item__desc
  grid-area: desc
  font-size: 1rem
  color: color__5

.portfolio-item__date
  grid-area: date
  

.portfolio-item__genre
  grid-area: genre
  text-align: right
  
