.player
    position: relative

    &__video
        width: 100%

    &__controls
        display: flex
        position: absolute
        bottom: 0
        left: 0
        width: 100%

    &__controls-wrap
        display: flex
        align-items: center
        justify-content: space-between
        width: 100%
        background-color: color__3

    &__button
        background: none
        border: none
        color: color__8
        padding: 5px 7px

    &__progress
        flex-grow: 1