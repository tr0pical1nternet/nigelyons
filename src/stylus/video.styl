.player
    position: relative
    border-radius: border-radius__default
    overflow: hidden
    height: 0
    padding-bottom: (100 * 1080 / 1920)%

    &:hover &__controls
        // transform: translateY(0)

    &__video
        display: block
        position: absolute
        width: 100%
        height: auto

    &__controls
        display: flex
        align-items: flex-end
        position: absolute
        bottom: 0
        left: 0
        width: 100%
        // overflow: hidden
        color: color__8
        z-index: 1
        // transform: translateY(44px);
        transition: transform .3s ease

    &__controls-wrap
        display: flex
        align-items: center
        justify-content: space-between
        width: 100%
        height: min-content
        padding: (5 / 16)rem (7 / 16)rem (5 / 16)rem .75rem
        background-color: color__3
        z-index: 2

    &__button
        background: none
        border: none
        color: color__8
        cursor: pointer
        
    &__play-toggle
        flex-shrink: 0
        // overflow: hidden
        padding: 0
        z-index: 2

        &__inner
            width: 3.75rem
            padding: .75rem 1rem .75rem 1rem
            // background-color: color__3
        
        svg
            width: 100%
            height: auto
        
        &:hover
            color: color__9

    &__progress-time
        font-size: .875rem
        line-height: 1
        font-weight: 300
        padding: 0 .125em
        margin-right: .25rem
        font-variant-numeric: tabular-nums;

    &__progress-range
        width: 3rem
        flex-grow: 1
        margin-left: .25rem
        margin-right: 1rem

    &__volume-range
        width: 4rem
        margin-left: .25rem
        margin-right: 1rem

    &__decoration
        width: 5rem
        height: 100%
        position: absolute
        background-color: color__3
        transform: skew(30deg) translateX(-.75rem)

.quality-menu
    display: inline-block
    position: absolute
    right: 0
    bottom: 0
    padding: 1rem 1.5rem (44 / 16)rem
    font-size: .875rem
    color: color__7
    background-color: color__2
    z-index: 1
    clip-path: polygon(0 1rem, 1rem 0, 100% 0px, 100% 100%, 0px 100%)

    & > * + *
      margin-top: .5em

    &__label
      display: flex
      align-items: center

    &__radio
      margin: 0 .5rem 0 0

