      .player
        include ../svg/icons.svg
        video.player__video(width='480' height='270')
          source(src='video/nigel-reel-2015_480.mp4' type='video/mp4' data-quality='270')
          source(src='video/nigel-reel-2015_640.mp4' type='video/mp4' data-quality='360')
          source(src='video/nigel-reel-2015_1280.mp4' type='video/mp4' data-quality='720')
          source(src='video/nigel-reel-2015_1920.mp4' type='video/mp4' data-quality='1080')

        .player__controls.hidden
          button.player__button.player__play-toggle(title='Toggle Play')
            .player__play-toggle__inner
              +player__icon('play', 'Play', 25, 20, 0)

          .player__controls-wrap
            label.player__progress.material-slider
              input(type='range' name='progress' min=0 max=1 step='any' value='0' title='Progress')
            
            .player__time #[span.player__time-current 0:00] #[span.player__time-divider /] #[span.player__time-remaining 0:00]

            button.player__button.player__mute-toggle(title='Toggle Mute')
              +player__icon('mute', 'Mute', 16, 16, 0)
            label.player__volume.material-slider
              input(type='range' name='volume' min=0 max=1 step='0.05' value='1' title='Volume')
            
            button.player__button.player__quality-toggle(title='Quality')
              +player__icon('quality', 'Quality', 16, 16, 0)
            
            .player__quality-menu.hidden(role='menu' hidden='')
              .player__quality-menu__heading Quality
              label.player__quality-menu__label
                input.player__quality-menu__radio(type='radio' value='0' name='quality' checked)
                | 240p
              label.player__quality-menu__label
                input.player__quality-menu__radio(type='radio' value='1' name='quality')
                | 480p
              label.player__quality-menu__label
                input.player__quality-menu__radio(type='radio' value='2' name='quality')
                | 720p
              label.player__quality-menu__label
                input.player__quality-menu__radio(type='radio' value='3' name='quality')
                | 1080p
            
            button.player__button.player__fullscreen-toggle(title='Fullscreen')
              +player__icon('fullscreen', 'Fullscreen', 16, 14, 0)
                   
          .player__decoration(role='presentation')

